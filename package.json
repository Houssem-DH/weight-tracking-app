{
  "name": "weightwise-pro",
  "version": "1.0.0",
  "description": "Modern Weight Tracking App with Cloud Sync",
  "author": "Houssem-DH",
  "main": "main.js",
  "private": true,
  "build": {
    "appId": "com.weightwise.app",
    "productName": "WeightWise Pro",
    "directories": {
      "output": "release"
    },
    "asar": true,
    "files": [
      "main.js",
      "preload.js",
      "next.config.js",
      "package.json",
      "public/**/*"
    ],
    "extraResources": [
      {
        "from": ".next/standalone",
        "to": ".next/standalone"
      },
      {
        "from": ".next/static",
        "to": ".next/static"
      },
      {
        "from": "public",
        "to": "public"
      },
      {
        "from": ".env.local",
        "to": ".env.local"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/logo.ico",
      "requestedExecutionLevel": "asInvoker",
      "signAndEditExecutable": false,
      "forceCodeSigning": false
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowElevation": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "WeightWise Pro",
      "installerIcon": "public/logo.ico",
      "uninstallerIcon": "public/logo.ico",
      "menuCategory": "WeightWise Pro"
    }
  },
  "scripts": {
    "dev": "next dev --webpack",
    "build": "cross-env TURBOPACK=0 NEXT_PRIVATE_TURBOPACK=0 next build && node build/check-standalone.js && node build/fix-standalone.js",
    "build:clean": "if exist .next rmdir /s /q .next & npm run build",
    "start": "next start",
    "electron": "electron .",
    "electron:dev": "concurrently -k \"npm run dev\" \"wait-on http://localhost:3000 && npm run electron\"",
    "pack": "npm run build:clean && electron-builder --dir",
    "dist": "npm run build:clean && electron-builder",
    "dist:win": "npm run build:clean && electron-builder --win",
    "clean": "if exist .next rmdir /s /q .next && if exist release rmdir /s /q release && if exist dist rmdir /s /q dist && if exist out rmdir /s /q out",
    "clean:all": "npm run clean && if exist node_modules rmdir /s /q node_modules && if exist package-lock.json del package-lock.json"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@neondatabase/serverless": "^0.10.4",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.5",
    "electron-serve": "^3.0.0",
    "framer-motion": "^12.23.26",
    "lucide-react": "^0.562.0",
    "next": "16.1.1",
    "next-themes": "^0.4.6",
    "react": "19.2.3",
    "react-day-picker": "^9.13.0",
    "react-dom": "19.2.3",
    "react-hook-form": "^7.69.0",
    "recharts": "^2.15.4",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.2.1",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/recharts": "^1.8.29",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "eslint": "^9",
    "eslint-config-next": "16.1.1",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5",
    "wait-on": "^9.0.3"
  }
}
